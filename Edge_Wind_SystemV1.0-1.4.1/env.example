# EdgeWind 环境变量配置模板
# 使用方法：复制此文件为 .env 并填写实际值

# ==================== 安全配置 ====================
# Flask密钥（生产环境必须修改！）
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# ==================== 数据库配置 ====================
# SQLite（默认）
# 推荐保持与项目一致：instance/wind_farm.db
DATABASE_URL=sqlite:///instance/wind_farm.db

# PostgreSQL（生产环境推荐）
# DATABASE_URL=postgresql://username:password@localhost:5432/edgewind

# ==================== 服务器配置 ====================
# 服务器主机地址
HOST=0.0.0.0

# 服务器端口
PORT=5000

# 调试模式（生产环境必须为False）
DEBUG=False

# ==================== 跨域配置 ====================
# 允许的域名列表（逗号分隔）
ALLOWED_ORIGINS=http://localhost:5000,http://10.34.28.228:5000

# ==================== 数据保留配置 ====================
# 历史数据保留天数（0表示永久保存）
DATA_RETENTION_DAYS=30

# ==================== 日志配置 ====================
# 日志级别：DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=logs/edgewind.log

# ==================== 性能配置 ====================
# WebSocket ping间隔（秒）
SOCKET_PING_INTERVAL=10

# WebSocket ping超时（秒）
SOCKET_PING_TIMEOUT=20

# 数据库连接超时（秒）
DB_TIMEOUT=20

# ==================== 用户配置 ====================
# 密码最小长度
PASSWORD_MIN_LENGTH=8

# 是否要求密码包含大写字母
PASSWORD_REQUIRE_UPPERCASE=True

# 是否要求密码包含数字
PASSWORD_REQUIRE_DIGITS=True

# 是否要求密码包含特殊字符
PASSWORD_REQUIRE_SPECIAL=False

